<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".title_home"), root_path %></li>
        <li><%= link_to t(".title_help"), help_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(".title_account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".title_profile"), current_user %></li>
              <li><%= link_to t(".title_setting"), '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".title_logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
        <li><%= link_to t(".title_login"), login_path %></li>
        <% end %>
        <li><%= link_to t("english"), locale: :en %></li>
        <li><%= link_to t("vietnam"), locale: :vn %></li>
      </ul>
    </nav>
  </div>
</header>
